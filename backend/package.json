{
  "name": "smart-factory-scheduler",
  "version": "1.0.0",
  "description": "Multi-tenant SaaS platform for intelligent manufacturing task scheduling using genetic algorithms",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch --hot src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "clean": "rm -rf dist node_modules/.cache",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.js --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "bun run prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:format": "prisma format",
    "logs:prod": "pm2 logs smart-factory-scheduler",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop smart-factory-scheduler",
    "pm2:restart": "pm2 restart smart-factory-scheduler",
    "pm2:delete": "pm2 delete smart-factory-scheduler",
    "validate": "bun run type-check && bun run lint && bun run test"
  },
  "dependencies": {
    "@elysiajs/cookie": "latest",
    "@elysiajs/cors": "latest",
    "@elysiajs/jwt": "latest",
    "@elysiajs/static": "latest",
    "@elysiajs/swagger": "latest",
    "@prisma/client": "^6.16.2",
    "bcryptjs": "^2.4.3",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "elysia": "latest",
    "nanoid": "^5.0.4",
    "nodemailer": "^6.9.8",
    "redis": "^4.6.12",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.14",
    "bun-types": "latest",
    "prisma": "^6.16.2",
    "prisma-dbml-generator": "^0.12.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "keywords": [
    "manufacturing",
    "scheduling",
    "genetic-algorithm",
    "saas",
    "multi-tenant",
    "elysia",
    "bun",
    "typescript"
  ],
  "author": "Hompushparaj Mehta",
  "license": "MIT"
}