# Environment variables template
# Copy this file to .env.development for local development

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_WS_URL=ws://localhost:3001

# App Configuration
VITE_APP_NAME=Smart Factory Scheduler

# Feature Flags / Mock API Configuration
# Set to 'true' to enable mock API (no backend required)
# Set to 'false' to use real backend API
VITE_ENABLE_MOCK_API=true

# Mock API delay in milliseconds (simulates network latency)
VITE_MOCK_API_DELAY=300

# Enable logging of mock API calls (useful for debugging)
VITE_MOCK_API_LOGGING=true
